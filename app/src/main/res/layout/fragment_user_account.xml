<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserAccountFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="811dp"
        tools:context=".UserAccountFragment">


        <!--        <ImageView-->
        <!--            android:id="@+id/imageView"-->
        <!--            android:layout_width="126dp"-->
        <!--            android:layout_height="118dp"-->
        <!--            android:layout_marginStart="140dp"-->
        <!--            android:layout_marginLeft="140dp"-->
        <!--            android:layout_marginTop="28dp"-->
        <!--            android:background="@drawable/img_border"-->
        <!--            app:layout_constraintStart_toStartOf="parent"-->
        <!--            app:layout_constraintTop_toTopOf="parent"-->
        <!--            tools:srcCompat="@drawable/jennaheadshot" />-->

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="155dp"
            android:layout_height="128dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="128dp"
            android:layout_marginRight="128dp"
            android:src="@drawable/profile"
            app:civ_border_color="#FF000000"
            app:civ_border_width="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nameTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="108dp"
            android:layout_marginLeft="108dp"
            android:layout_marginTop="170dp"
            android:gravity="center"
            android:hint="@string/name_entry"
            android:textColor="#000000"
            android:textColorHint="@color/colorPrimaryDark"
            android:textSize="30sp"
            app:fontFamily="@font/balthazar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/name_entry" />

        <EditText
            android:id="@+id/nameEntryText"
            android:layout_width="220dp"
            android:layout_height="30dp"
            android:layout_marginStart="92dp"
            android:layout_marginLeft="92dp"
            android:layout_marginTop="220dp"
            android:background="@drawable/textview_useraccount_border"
            android:ems="10"
            android:hint="@string/editname_entry"
            android:includeFontPadding="false"
            android:inputType="textPersonName"
            android:textColor="@color/borderGrey"
            app:fontFamily="@font/balthazar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/passwordText"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="92dp"
            android:layout_marginLeft="92dp"
            android:layout_marginTop="264dp"
            android:background="@drawable/textview_useraccount_border"
            android:ems="10"
            android:inputType="textPassword"
            android:text="@string/password_entry"
            android:textColor="@color/borderGrey"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/emailText"
            android:layout_width="220dp"
            android:layout_height="30dp"
            android:layout_marginStart="92dp"
            android:layout_marginLeft="92dp"
            android:layout_marginBottom="428dp"
            android:background="@drawable/textview_useraccount_border"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:text="@string/email_entry"
            android:textColor="@color/borderGrey"
            app:fontFamily="@font/balthazar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/phoneText"
            android:layout_width="220dp"
            android:layout_height="30dp"
            android:layout_marginStart="92dp"
            android:layout_marginLeft="92dp"
            android:layout_marginBottom="468dp"
            android:background="@drawable/textview_useraccount_border"
            android:ems="10"
            android:inputType="phone"
            android:text="@string/phonenumber_entry"
            android:textColor="@color/borderGrey"
            app:fontFamily="@font/balthazar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/enableLocationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="76dp"
            android:layout_marginLeft="76dp"
            android:layout_marginBottom="376dp"
            android:text="Enable location services"
            android:textColor="@color/borderGrey"
            android:textSize="22sp"
            app:fontFamily="@font/balthazar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Switch
            android:id="@+id/locationServicesSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="76dp"
            android:layout_marginRight="76dp"
            android:layout_marginBottom="372dp"
            android:thumbTint="@color/appYellow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/saveChangesButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="156dp"
            android:layout_marginRight="156dp"
            android:layout_marginBottom="292dp"
            android:background="@drawable/savechangesbutton_border_useraccount"
            android:hint="@string/saveChangesButtonText"
            android:textColorHint="@color/colorPrimaryDark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>